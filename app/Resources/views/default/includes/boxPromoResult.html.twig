<div class="row">

{% for promo in promos %}

        <!-- Card Projects -->
        <div class="col-md-4">
                <div class="card">
                        <div class="card-image">
                                <img class="img-responsive" src="http://material-design.storage.googleapis.com/publish/v_2/material_ext_publish/0Bx4BSt6jniD7TDlCYzRROE84YWM/materialdesign_introduction.png">
                        </div>

                        <div class="card-content">
                                <p>{{ promo.langage }}</p>
                                <p>{{ promo.name }}</p>
                        </div>

                        <div class="card-action">
                                <a href="{{ path('student_index', { 'promo': promo.id }) }}">Vois la promo</a>
                        </div>
                </div>
        </div>

{% endfor %}
</div>
